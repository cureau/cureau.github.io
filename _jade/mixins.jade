mixin chopsBar(title)
  div.chops-topbar
      h6= title
      div.close-x
        svg(viewbox='0 0 40 40')
          path(d='M 10,10 L 30,30 M 30,10 L 10,30')

mixin monkey(ct)
    - var ret = ''
    - for (var x = 0; x < ct; x++) ret += '&#x1F435;'
    //- for (var x = 0; x < ct; x++) ret += '&#x1F482;'
    //- for (var y = 0; y < spaces; y++) ret += '&nbsp;'
    //- ret += '&nbsp'
    span(class="unicon") !{ret}

mixin dancers(ct)
    - var ret = ''
    - for (var x = 0; x < ct; x++) ret += '&#x1F46F;'
    - ret += '&nbsp'
    span(class="unicon") !{ret}

